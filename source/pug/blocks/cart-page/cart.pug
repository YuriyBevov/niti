-
  items = [
      {
          name: 'Супер фартук',
          price: '2500 р.',
          imgUrl: './assets/img/about_img@1x.jpg'
      },

      {
          name: 'Супер фартук -2',
          price: '5500 р.',
          imgUrl: './assets/img/about_img@1x.jpg'
      }
  ];
.cart
  .cmn__wrapper.cart__wrapper
    ul.cart__list
      each item in items
        li.cart__item.product-card

          .product-card__content
            .product-card__content-wrapper
              a(href="#")
                img(src=item.imgUrl alt="").product-card__img
              
              .product-card__info
                small Арт.: <span>001-657</span>
                a(href="#").product-card__title название	название название	названиеназвание
                span Цена: <span class="product-card__price">  1000000 руб. </span>
                span Старая цена: <span class="product-card__price product-card__price--old">  15000000 руб. </span>

          .product-card__action
            .product-card__quantity
              form(method="")
                input(type="hidden" name="key" value="#")

                .form-group
                  button.product-card__quantity-btn.js-remove-item(type="" name="" value="" style="display: block;" aria-label="удалить") -
                  input(type="number" name="count" value="#").product-card__quantity-input.js-product-card-input
                  button.product-card__quantity-btn.js-add-item(type="" name="" value="" style="display: block;" aria-label="добавить") +
      
            .product-card__cost
              span Общая стоимость: <span class="ms2_cost">10000000</span>&nbsp;руб.
      
            .product-card__remove
              form(method="#")
              input(type="hidden" name="key" value="#")
                      
              button(type="" name="ms2_action" value="cart/remove")
                svg(width="30" height="30")
                  use(xlink:href="#icon-remove")

    button.cart__item-clean Очистить корзину

    .cart__info
      .cart__info-header
        span.cart__info-header-title Итоговая стоимость:
        span.cart__info-header-total 800000 р.
        
      .cart__info-footer 
        p.cart__info-footer-text Укажите свои контактные данные, желаемый вид доставки, и наш специалист свяжется с вами в самое ближайшее время.

        include ./components/form
  
      
           
        
